{
  "family": "api-task",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "networkMode": "awsvpc",
  "executionRoleArn": "REPLACE_ME_EXEC_ROLE",
  "containerDefinitions": [
    {
      "name": "journal-container",
      "image": "app:latest",  // will be replaced in workflow
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://dbuser:dbpassword@your-db-endpoint.amazonaws.com/dbname"
        }
      ]
    }
  ]
}
