{
  "family": "api-task",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "networkMode": "awsvpc",
  "executionRoleArn": "REPLACE_ME_EXEC_ROLE",
  "containerDefinitions": [
    {
      "name": "journal-container",
      "image": "app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "DATABASE_URL"
        }
      ]
    }
  ]
}
